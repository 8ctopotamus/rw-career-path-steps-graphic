  <style>
    .career-path-steps {
      display: flex;
      margin: 50px;
    }
    
		.circle {
      height: 100px;
      width: 100px;
      border-radius: 100px;
      background: green;
      display: grid;
      place-items: center;
      color: white;
      text-decoration: none;
      z-index: 1;
      position: relative;
    }

    .step {
      background: blue;
      width: 100px;
      height: 10px;
      position: relative;
    }

    .step::before {
      content: '';
      display: inline-block;
      background: #f15757;
      width: 100px;
      height: 20px;
      transform: skewX(-40deg);
      position: absolute;
      top: -20px;
      left: 8px;
    }

    .step::after {
      content: '';
      display: inline-block;
      background: #9e1515;
      width: 16px;
      height: 10px;
      transform: skewY(-50deg);
      position: absolute;
      top: -10px;
      left: 100%;
    }
